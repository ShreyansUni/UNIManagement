@model UNIManagement.Entities.ViewModel.ProjectDetailsViewModel;
<script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>

<!--begin::Content-->
<div class="container row">

 
</div>        
<div class=" d-flex flex-column flex-column-fluid pt-2" id="kt_content">

    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-xxl">
            <form asp-action="AddEdit" asp-controller="Project" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Card CLient-->
                        <div class="card">
                            <div class="card-header pt-5">
                                
                                <div class="col-md-6">
                                    <h1>Project Details</h1>
                                </div>
                                <div class="col-md-6 text-end">
                                   
                                    <a class="btn rounded-2  border-primary" onclick="history.back()">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
                                        </svg>Back
                                    </a>
                                </div>
                         
                              
                            </div>
                            <!--begin::Card body-->
                            <div class="card-body pt-5">
                                <div class="row">
                                    <div class="form-group">
                                        <input type="hidden" class="form-control" asp-for="ProjectId" />
                                    </div>
                                    <div class="col-md-4">
                                        <label>Project Name</label>
                                        <input type="text" asp-for="Name" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label>Client </label>
                                       <select class="form-select"  asp-for="ClientId" onchange="fnSetClientName(this)" data-allow-clear="true" tabindex="-1" asp-items="@(new SelectList(ViewBag.ClientDropDown,"ClientId","Name"))" data-control="select" data-placeholder="Client">
                                            <option><-- Select a Client --></option>
                                        </select> 
                                        <input type="hidden" asp-for="ClientName" id="clientName" />

                                    </div>
                                    <div class="col-md-4">
                                        <label>Domain </label>

                                      
                                        <select class="form-select" asp-for="DomainId"  onchange="fnSetDomainName(this)" data-allow-clear="true" tabindex="-1" asp-items="@(new SelectList(ViewBag.DomainDropDown,"DomainId","Name"))" data-control="select" data-placeholder="Domain">
                                            <option><--Select a Domain --></option>
                                        </select>
                                        <input type="hidden" asp-for="DomainName" id="domainName" />
                                      
                                    </div>
                                </div>
                                <div class="row pt-5">
                                    <div class="col-md-6">
                                        <label>Arrival Date</label>
                                        <input type="date" class="form-control" id="arrivaldate" asp-for="ArrivalDate" onchange="validateDates()" />
                                        <span class="text-danger" asp-validation-for="ArrivalDate" id="arrivaldateError"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Commitment Date</label>
                                        <input type="date" class="form-control" id="commitmentdate" asp-for="CommitmentDate" onchange="validateDates()" />
                                        <span class="text-danger" asp-validation-for="CommitmentDate" id="commitmentdateError"></span>
                                    </div>
                                </div>
                                <div class="row pt-5">
                                    <div class="col-md-6">
                                        <label>Git Repo</label>
                                        <input type="text" class="form-control" asp-for="GitRepo" />
                                        <span class="text-danger" asp-validation-for="GitRepo"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Business Name</label>
                                        <select class="form-select" asp-for="BusinessName" data-allow-clear="true" tabindex="-1" asp-items="@(new SelectList(ViewBag.BusinessNameDropDown,"BusinessName","BusinessName"))" data-control="select" >
                                            <option><-- Select a Business Name --></option>
                                        </select>
                                     
                                    </div>
                                </div>
                                <div class="row pt-5">
                                    <div class="col-md-6">
                                           <label>Add Documents</label>
                                    <input type="file" class="form-control" asp-for="Projectdocument" />
                                    <span class="text-danger" asp-validation-for="Projectdocument"></span>


                                    </div>
                                    <div class="col-md-6">
                                           <div class="col-md-6 pt-7">
                                        @if (Model != null && !string.IsNullOrEmpty(Model.Document))
                                        {
                                            <a href="~/Documents/Projct/@Model.ProjectId/Document.pdf" target="_blank">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-file-pdf-fill" viewBox="0 0 16 16">
                                                    <path d="M5.523 10.424q.21-.124.459-.238a8 8 0 0 1-.45.606c-.28.337-.498.516-.635.572l-.035.012a.3.3 0 0 1-.026-.044c-.056-.11-.054-.216.04-.36.106-.165.319-.354.647-.548m2.455-1.647q-.178.037-.356.078a21 21 0 0 0 .5-1.05 12 12 0 0 0 .51.858q-.326.048-.654.114m2.525.939a4 4 0 0 1-.435-.41q.344.007.612.054c.317.057.466.147.518.209a.1.1 0 0 1 .026.064.44.44 0 0 1-.06.2.3.3 0 0 1-.094.124.1.1 0 0 1-.069.015c-.09-.003-.258-.066-.498-.256M8.278 4.97c-.04.244-.108.524-.2.829a5 5 0 0 1-.089-.346c-.076-.353-.087-.63-.046-.822.038-.177.11-.248.196-.283a.5.5 0 0 1 .145-.04c.013.03.028.092.032.198q.008.183-.038.465z" />
                                                    <path fill-rule="evenodd" d="M4 0h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2m.165 11.668c.09.18.23.343.438.419.207.075.412.04.58-.03.318-.13.635-.436.926-.786.333-.401.683-.927 1.021-1.51a11.6 11.6 0 0 1 1.997-.406c.3.383.61.713.91.95.28.22.603.403.934.417a.86.86 0 0 0 .51-.138c.155-.101.27-.247.354-.416.09-.181.145-.37.138-.563a.84.84 0 0 0-.2-.518c-.226-.27-.596-.4-.96-.465a5.8 5.8 0 0 0-1.335-.05 11 11 0 0 1-.98-1.686c.25-.66.437-1.284.52-1.794.036-.218.055-.426.048-.614a1.24 1.24 0 0 0-.127-.538.7.7 0 0 0-.477-.365c-.202-.043-.41 0-.601.077-.377.15-.576.47-.651.823-.073.34-.04.736.046 1.136.088.406.238.848.43 1.295a20 20 0 0 1-1.062 2.227 7.7 7.7 0 0 0-1.482.645c-.37.22-.699.48-.897.787-.21.326-.275.714-.08 1.103" />
                                                </svg>
                                            </a>
                                        }
                                       
                                    </div> 
                                        </div>
                                 

                                </div>
                                <div class="row pt-5">
                                    <div class="col-md-12">


                                        <label asp-for="DocDescription"></label>
                                        <textarea type="text" id="editor1" asp-for="DocDescription"></textarea>
                                        <script>
                                          
                                        </script>
                                    </div>
                                </div>
                                <div class="row pt-5">
                                    <div class="col-md-12">


                                        <label asp-for="AdditionalInformation"></label>
                                        <textarea type="text" id="editor2" asp-for="AdditionalInformation"></textarea>
                                        <script>
                                         
                                        </script>
                                    </div>
                                </div>
                                <div class="row pt-5">
                                    <div class="form-check">
                                         @if (Model == null)
                                        {
                                            <input class="form-check-input" type="checkbox" value="" id="kt_check_indeterminate_1" value="True" asp-for="IsActive" checked />
                                        }
                                        else
                                        {
                                            <input class="form-check-input" type="checkbox" value="" id="kt_check_indeterminate_1" value="True" asp-for="IsActive" />
                                        }
                                        <label class="form-check-label" for="kt_check_indeterminate_1">
                                            Is Active
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-2 text-center">
                                <button type="reset" id="resetButton" class="btn btn-danger">Reset</button>
                                <button type="submit" class="btn btn-primary">Submit</button>

                            </div>
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Card CLient-->
                </div>
            </form>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->
</div>
<!--end::Content-->
<script>
     $(document).ready(function () {
        // Initialize CKEditors
        let editor1, editor2;
       ClassicEditor
                                                .create(document.querySelector('#editor1'))
                                                .then(editor => {
                                                    editor1 = editor;
                                                })
                                                .catch(error => {
                                                    console.error(error);
                                                });
     
        ClassicEditor
            .create(document.querySelector('#editor2'))
            .then(editor => {
                editor2 = editor;
            })
            .catch(error => {
                console.error(error);
            });
        $('#resetButton').on('click', function () {
            // Clear CKEditor data
            if (editor1) editor1.setData('');
            if (editor2) editor2.setData('');
        });
        // Toggle the workshop section based on checkbox status
        $("#isworkshop").click(function () {
            if ($(this).is(":checked")) {
                $("#answer").show();
            } else {
                $("#answer").hide();
            }
        });
    });
    //fill dropdown of client and domain name
     function fnSetClientName(element){
        console.log(element);
        document.getElementById("clientName").value = element.options[element.selectedIndex].text;
    }
    function fnSetDomainName(element){
        console.log(element);
        document.getElementById("domainName").value = element.options[element.selectedIndex].text;
    }
    //date validate
    function validateDates() {
        var assignDate = document.getElementById("arrivaldate").value;
        var dueDate = document.getElementById("commitmentdate").value;
        var assignDateError = document.getElementById("arrivaldateError");
        var dueDateError = document.getElementById("commitmentdateError");

        // Clear previous error messages
        assignDateError.textContent = "";
        dueDateError.textContent = "";

         if (assignDate && dueDate) {
               let assignDateObj = new Date(assignDate);
        let dueDateObj = new Date(dueDate);
             if (dueDateObj < assignDateObj) {
            dueDateError.textContent = "Due Date cannot be before Assign Date.";
            event.preventDefault(); 
        } else if (dueDateObj.getTime() == assignDateObj.getTime()) {
            dueDateError.textContent = "Due Date cannot be the same as Assign Date.";
            event.preventDefault();
           
        }
        }
    }
</script>