@using UNIManagement.Entities.ViewModel;
@model List<LeaveRequestViewModel>
<div>
    <div class="container mt-2">
        <div class="row">
            <div class="col ">
                <div class=" my-3 d-flex justify-content-between align-items-center">
                    <h1>Leave Records</h1>
                    <a class="btn btn-outline-primary border-primary border border-2 rounded align-items-center" type="button" asp-action="LeaveRequestFormPage" asp-controller="LeaveRequest">Request A Leave </a>
                </div>
                <div class="bg-white p-5 mb-3 rounded">
                    <table class="table table-bordered my-3 table-hover text-center" id="example">
                        <thead class="table-light fw-bolder">
                            <tr>
                                <th class="text-center" scope="col">Sr. No</th>
                                <th class="text-center" scope="col">Leave Reason</th>
                                <th class="text-center" scope="col">Start Date</th>
                                <th class="text-center" scope="col">End Date</th>
                                <th class="text-center" scope="col">Category</th>
                                <th class="text-center" scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr class="align-items-center h-100 border  border-secondary">
                                        <td>@(i + 1)</td>
                                        <td>@Model[i].ReasonForLeave</td>
                                        <td>@Model[i].LeaveStartDate</td>
                                        <td>@Model[i].LeaveEndDate</td>
                                        <td>
                                            <div>
                                                @{
                                                    var DateToday = DateOnly.FromDateTime(DateTime.Now);
                                                }
                                                @if (Model[i].LeaveStartDate <= DateToday && Model[i].LeaveEndDate >= DateToday)
                                                {
                                                // The current date falls within the leave period
                                                    <span class="badge bg-dark-subtle border-dark border-2 border text-dark">In-progress</span>
                                                }
                                                else if (Model[i].LeaveEndDate < DateToday)
                                                {
                                                // The leave period has ended
                                                    <span class="badge bg-danger-subtle border-danger border-2 border  text-danger">Availed</span>
                                                }
                                                else if (Model[i].LeaveStartDate > DateToday)
                                                {
                                                // The leave period is in the future
                                                    <span class="badge bg-primary-subtle border-primary border-2 border  text-primary">Approaching</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (Model[i].LeaveEndDate < DateToday)
                                            {
                                                continue;
                                            }
                                            <a type="button" class="btn btn-sm btn-outline-primary border-primary border border-2 rounded align-items-center" asp-action="EditLeaveRequest" asp-controller="LeaveRequest" asp-route-leaveRequestId=@Model[i].LeaveID><i class="bi bi-pen-fill text-primary"></i></a>
                                            <button class="btn btn-sm btn-outline-danger border-danger border border-2 rounded align-items-center" onclick=openDeleteModal(@Model[i].LeaveID)><i class="bi bi-trash-fill text-danger"></i></button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr >No Records Found</tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close btn" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you really want to delete this record?
                <input hidden type="number" id="recordId" value="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-dismiss="modal">No</button>
                <button type="button" onclick="deleteLeaveRecord()" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>
<script>
    function openDeleteModal(recordId) {
        debugger;
        $('#confirmDeleteModal').modal('show');
        document.getElementById('recordId').value = recordId;
    }
    function deleteLeaveRecord() {
        debugger;
        var leaveRecordId = document.getElementById('recordId').value;
        if (leaveRecordId === 0 || leaveRecordId === null) {
            alert("Unexpected Error Occurred!");
            return;
        }
        $.ajax({
            url: '/LeaveRequest/DeleteLeaveRequest',
            type: 'POST',
            data: { leaveRecordID: leaveRecordId },
            success: function (data) {
                if (data) {
                    window.locaFtion.reload();
                }
            },
            error: function (error) {
                alert('Error');
            }
        });
    }
</script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>